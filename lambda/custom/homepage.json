{
    "type": "APL",
    "version": "1.0",
    "import": [
        {
            "name": "alexa-viewport-profiles",
            "version": "1.0.0"
        },
        {
            "name": "alexa-layouts",
            "version": "1.0.0"
        },
        {
            "name": "alexa-styles",
            "version": "1.0.0"
        }
    ],
    "resources": [
        {
            "description": "Colors",
            "colors": {
                "myWhite": "#FFFFFF",
                "myLightPink": "#FBC6AD",
                "myPink": "#F6008D",
                "myRed": "#F6001A",
                "myDarkRed": "#B70010",
                "myLightOrange": "#FBC26C",
                "myOrange": "#F88225",
                "myDarkOrange": "#F74A1E",
                "myYellow": "#FBC531",
                "myLightGreen": "#C3D9A6",
                "myGreen": "#8EB854",
                "myDarkGreen": "#2F5C18",
                "myLightBlue": "#CCF0F6",
                "myBlue": "#38B7FC",
                "myDarkBlue": "#2682C6",
                "myPurple": "#1F22A7",
                "myDarkPurple": "#1E1971"
            }
        }
    ],
    "layouts": {
        "Logo": {
            "parameters": [
                "size"
            ],
            "items": [
                {
                    "type": "Container",
                    "width": "100vw",
                    "height": "${size * 2}vw",
                    "direction": "column",
                    "items": [
                        {
                            "type": "Container",
                            "width": "100vw",
                            "height": "${size}vw",
                            "direction": "row",
                            "items": [
                                {
                                    "type": "Frame",
                                    "width": "${size}vw",
                                    "height": "${size}vw",
                                    "backgroundColor": "@myDarkRed",
                                    "items": {
                                        "type": "Text",
                                        "text": "L",
                                        "color": "@myWhite",
                                        "fontSize": "${size}vw",
                                        "fontWeight": "600",
                                        "width": "${size}vw",
                                        "textAlign": "center"
                                    }
                                },
                                {
                                    "type": "Frame",
                                    "width": "${size}vw",
                                    "height": "${size}vw",
                                    "backgroundColor": "@myWhite",
                                    "items": {
                                        "type": "Text",
                                        "text": "E",
                                        "color": "@myRed",
                                        "fontSize": "${size}vw",
                                        "fontWeight": "600",
                                        "width": "${size}vw",
                                        "textAlign": "center"
                                    }
                                },
                                {
                                    "type": "Frame",
                                    "width": "${size}vw",
                                    "height": "${size}vw",
                                    "backgroundColor": "@myLightOrange",
                                    "items": {
                                        "type": "Text",
                                        "text": "V",
                                        "color": "@myWhite",
                                        "fontSize": "${size}vw",
                                        "fontWeight": "600",
                                        "width": "${size}vw",
                                        "textAlign": "center"
                                    }
                                },
                                {
                                    "type": "Frame",
                                    "width": "${size}vw",
                                    "height": "${size}vw",
                                    "backgroundColor": "@myWhite",
                                    "items": {
                                        "type": "Text",
                                        "text": "E",
                                        "color": "@myOrange",
                                        "fontSize": "${size}vw",
                                        "fontWeight": "600",
                                        "width": "${size}vw",
                                        "textAlign": "center"
                                    }
                                },
                                {
                                    "type": "Frame",
                                    "width": "${size}vw",
                                    "height": "${size}vw",
                                    "backgroundColor": "@myDarkOrange",
                                    "items": {
                                        "type": "Text",
                                        "text": "L",
                                        "color": "@myWhite",
                                        "fontSize": "${size}vw",
                                        "fontWeight": "600",
                                        "width": "${size}vw",
                                        "textAlign": "center"
                                    }
                                },
                                {
                                    "type": "Frame",
                                    "width": "${size}vw",
                                    "height": "${size}vw",
                                    "backgroundColor": "@myWhite",
                                    "items": {
                                        "type": "Text",
                                        "text": "â˜…",
                                        "color": "@myYellow",
                                        "fontSize": "${size}vw",
                                        "fontWeight": "600",
                                        "width": "${size}vw",
                                        "textAlign": "center"
                                    }
                                },
                                {
                                    "type": "Frame",
                                    "width": "${size}vw",
                                    "height": "${size}vw",
                                    "backgroundColor": "@myRed",
                                    "items": {
                                        "type": "Text",
                                        "text": "U",
                                        "color": "@myWhite",
                                        "fontSize": "${size}vw",
                                        "fontWeight": "600",
                                        "width": "${size}vw",
                                        "textAlign": "center"
                                    }
                                },
                                {
                                    "type": "Frame",
                                    "width": "${size}vw",
                                    "height": "${size}vw",
                                    "backgroundColor": "@myWhite",
                                    "items": {
                                        "type": "Text",
                                        "text": "P",
                                        "color": "@myOrange",
                                        "fontSize": "${size}vw",
                                        "fontWeight": "600",
                                        "width": "${size}vw",
                                        "textAlign": "center"
                                    }
                                }
                            ]
                        },
                        {
                            "type": "Container",
                            "width": "100vw",
                            "height": "${size}vw",
                            "direction": "row",
                            "items": [
                                {
                                    "type": "Frame",
                                    "width": "${size}vw",
                                    "height": "${size}vw",
                                    "backgroundColor": "@myWhite",
                                    "items": {
                                        "type": "Text",
                                        "text": "R",
                                        "color": "@myDarkBlue",
                                        "fontSize": "${size}vw",
                                        "fontWeight": "600",
                                        "width": "${size}vw",
                                        "textAlign": "center"
                                    }
                                },
                                {
                                    "type": "Frame",
                                    "width": "${size}vw",
                                    "height": "${size}vw",
                                    "backgroundColor": "@myBlue",
                                    "items": {
                                        "type": "Text",
                                        "text": "I",
                                        "color": "@myWhite",
                                        "fontSize": "${size}vw",
                                        "fontWeight": "600",
                                        "width": "${size}vw",
                                        "textAlign": "center"
                                    }
                                },
                                {
                                    "type": "Frame",
                                    "width": "${size}vw",
                                    "height": "${size}vw",
                                    "backgroundColor": "@myWhite",
                                    "items": {
                                        "type": "Text",
                                        "text": "D",
                                        "color": "@myDarkPurple",
                                        "fontSize": "${size}vw",
                                        "fontWeight": "600",
                                        "width": "${size}vw",
                                        "textAlign": "center"
                                    }
                                },
                                {
                                    "type": "Frame",
                                    "width": "${size}vw",
                                    "height": "${size}vw",
                                    "backgroundColor": "@myPink",
                                    "items": {
                                        "type": "Text",
                                        "text": "D",
                                        "color": "@myWhite",
                                        "fontSize": "${size}vw",
                                        "fontWeight": "600",
                                        "width": "${size}vw",
                                        "textAlign": "center"
                                    }
                                },
                                {
                                    "type": "Frame",
                                    "width": "${size}vw",
                                    "height": "${size}vw",
                                    "backgroundColor": "@myWhite",
                                    "items": {
                                        "type": "Text",
                                        "text": "L",
                                        "color": "@myBlue",
                                        "fontSize": "${size}vw",
                                        "fontWeight": "600",
                                        "width": "${size}vw",
                                        "textAlign": "center"
                                    }
                                },
                                {
                                    "type": "Frame",
                                    "width": "${size}vw",
                                    "height": "${size}vw",
                                    "backgroundColor": "@myPurple",
                                    "items": {
                                        "type": "Text",
                                        "text": "E",
                                        "color": "@myWhite",
                                        "fontSize": "${size}vw",
                                        "fontWeight": "600",
                                        "width": "${size}vw",
                                        "textAlign": "center"
                                    }
                                },
                                {
                                    "type": "Frame",
                                    "width": "${size}vw",
                                    "height": "${size}vw",
                                    "backgroundColor": "@myWhite",
                                    "items": {
                                        "type": "Text",
                                        "text": "S",
                                        "color": "@myPink",
                                        "fontSize": "${size}vw",
                                        "fontWeight": "600",
                                        "width": "${size}vw",
                                        "textAlign": "center"
                                    }
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    },
    "styles": {
        "levelStyle": {
            "values": [
                {
                    "fontSize": "5vw",
                    "fontWeight": "800",
                    "color": "@myGreen",
                    "textAlign": "center"
                }
            ]
        }
    },
    "mainTemplate": {
        "parameters": [
            "datasource"
        ],
        "item": [
            {
                "type": "Container",
                "width": "100vw",
                "height": "100vh",
                "items": [
                    {
                        "type": "Frame",
                        "width": "100vw",
                        "height": "100vh",
                        "position": "absolute",
                        "backgroundColor": "@myWhite"
                    },
                    {
                        "when": "${@viewportProfile == @hubRoundSmall}",
                        "type": "Logo",
                        "size": 12,
                        "position": "absolute",
                        "top": "40vh"
                    },
                    {
                        "when": "${ @viewportProfile == @hubLandscapeMedium || @viewportProfile == @hubLandscapeLarge || @viewportProfile == @tvLandscapeXLarge}",
                        "type": "Logo",
                        "size": 12,
                        "position": "absolute"
                    },
                    {
                        "type": "Container",
                        "position": "absolute",
                        "width": "100vw",
                        "height": "38vh",
                        "direction": "row",
                        "top": "50vh",
                        "alignItems": "center",
                        "justifyContent": "center",
                        "items": [
                            {
                                "type": "TouchWrapper",
                                "width": "33vw",
                                "item": {
                                    "type": "Text",
                                    "text": "EASY",
                                    "style": "levelStyle"
                                },
                                "onPress": {
                                    "type": "SendEvent",
                                    "arguments": [
                                        "easy"
                                    ]
                                }
                            },
                            {
                                "type": "TouchWrapper",
                                "width": "33vw",
                                "item": {
                                    "type": "Text",
                                    "text": "MEDIUM",
                                    "style": "levelStyle"
                                },
                                "onPress": {
                                    "type": "SendEvent",
                                    "arguments": [
                                        "med"
                                    ]
                                }
                            },
                            {
                                "type": "TouchWrapper",
                                "width": "33vw",
                                "item": {
                                    "type": "Text",
                                    "text": "HARD",
                                    "style": "levelStyle"
                                },
                                "onPress": {
                                    "type": "SendEvent",
                                    "arguments": [
                                        "hard"
                                    ]
                                }
                            }
                        ]
                    },
                    {
                        "when": "${@viewportProfile == @hubRoundSmall}",
                        "type": "Text",
                        "text": "${datasource.levelUpData.properties.hintString}",
                        "position": "absolute",
                        "width": "100vw",
                        "textAlign": "center",
                        "fontSize": "3vw",
                        "top": "85vh"
                    },
                    {
                        "when": "${ @viewportProfile == @hubLandscapeMedium || @viewportProfile == @hubLandscapeLarge || @viewportProfile == @tvLandscapeXLarge}",
                        "type": "Text",
                        "text": "${datasource.levelUpData.properties.hintString}",
                        "position": "absolute",
                        "width": "100vw",
                        "textAlign": "center",
                        "fontSize": "3vw",
                        "top": "90vh"
                    }
                ]
            }
        ]
    }
}